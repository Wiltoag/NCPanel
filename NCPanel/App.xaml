<Application x:Class="NCPanel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NCPanel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomWindowStyle.xaml" />
                <ResourceDictionary>
                    <LinearGradientBrush
                        StartPoint="0,0"
                        EndPoint="1,1"
                        x:Key="MainColor">
                        <GradientStop
                            Offset="0"
                            Color="#D195FD" />
                        <GradientStop
                            Offset="2"
                            Color="#4520A9" />
                    </LinearGradientBrush>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>