                                                            <Border.Style>
                                                                <Style
                                                                    TargetType="Border">
                                                                    <Setter
                                                                        Property="Visibility"
                                                                        Value="Hidden" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger
                                                                            Binding="{Binding Path=ExtensionMode}"
                                                                            Value="BottomLeft">
                                                                            <Setter
                                                                                Property="Visibility"
                                                                                Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
