                                                                        <DataTrigger
                                                                            Binding="{Binding Path=ExtensionMode}"
                                                                            Value="None">
                                                                            <Setter
                                                                                Property="Visibility"
                                                                                Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                        <Border
                                                            CornerRadius="5"
                                                            Grid.ColumnSpan="6"
                                                            Grid.RowSpan="6"
                                                            Background="White">
                                                            <Border.Style>
                                                                <Style
                                                                    TargetType="Border">
                                                                    <Setter
                                                                        Property="Visibility"
                                                                        Value="Hidden" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger
                                                                            Binding="{Binding Path=ExtensionMode}"
                                                                            Value="Maximized">
                                                                            <Setter
                                                                                Property="Visibility"
                                                                                Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Rectangle.OpacityMask>
                                        <Rectangle.Style>
                                            <Style
                                                TargetType="Rectangle">
                                                <Setter
                                                    Property="Fill"
                                                    Value="White" />
                                                <Style.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                                        Value="True">
                                                        <Setter
                                                            Property="Fill"
                                                            Value="{StaticResource MainColor}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </DockPanel>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </ScrollViewer>
                <Border
                    CornerRadius="16,0,0,0"
                    Background="#08ffffff">
                    <ScrollViewer
                        Margin="10"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl
                            ItemTemplate="{StaticResource GridLayoutCommand}"
                            ItemsSource="{Binding Path=Commands}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel
                                        Orientation="Horizontal"
                                        IsItemsHost="True" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </ControlTemplate>
        <ControlTemplate
            TargetType="Control"
            x:Key="ClosedContent">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="NCPanel">
                <TextBlock.LayoutTransform>
                    <RotateTransform
                        Angle="90" />
                </TextBlock.LayoutTransform>
            </TextBlock>
        </ControlTemplate>
    </Window.Resources>
    <Window.Style>
        <Style
            TargetType="Window"
            BasedOn="{StaticResource CustomWindow}">
            <Style.Triggers>
                <DataTrigger
                    Binding="{Binding Open}"
                    Value="False">
                    <Setter
                        Property="ResizeMode"
                        Value="NoResize" />
                    <Setter
                        Property="WindowChrome.WindowChrome"
                        Value="{x:Null}" />
                    <Setter
                        Property="WindowStyle"
                        Value="None" />
                    <Setter
                        Property="Content">
                        <Setter.Value>
                            <Control
                                Template="{StaticResource ClosedContent}" />
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Open}"
                    Value="True">
                    <Setter
                        Property="Content">
                        <Setter.Value>
                            <Control
                                Template="{StaticResource OpenContent}" />
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
</Window>